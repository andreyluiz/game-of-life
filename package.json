{
  "name": "game-of-life",
  "version": "1.0.0",
  "description": "Conway's Game of Life made with React.",
  "main": "index.js",
  "repository": "git@github.com:andreyluiz/game-of-life.git",
  "author": "Andrey Luiz <andreyluiz.developer@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "parcel public/index.html --out-dir build",
    "build": "parcel build src/index.js --out-dir simulator",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "parcel": "^1.11.0",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "prop-types": "^15.6.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-duck": "^1.0.2",
    "redux-thunk": "^2.2.0"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/button-has-type": "off",
      "react/jsx-one-expression-per-line": "off",
      "react/destructuring-assignment": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
